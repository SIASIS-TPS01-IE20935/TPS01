  Id_Estudiante  String         @db.VarChar(20)
  responsable    T_Responsables @relation(fields: [Id_Responsable], references: [Id_Responsable])
  estudiante     T_Estudiantes  @relation(fields: [Id_Estudiante], references: [Id_Estudiante])

  @@map("T_Relaciones_E_R")
}

model T_Profesores_Primaria {

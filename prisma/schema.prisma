model T_Aulas {
  Id_Aula                Int                      @id @default(autoincrement())
  Nivel                  String                   @db.VarChar(10) // Reemplazado ENUM por VARCHAR(10)
  Grado                  Int                      @db.Integer
  Seccion                String                   @db.VarChar(2)
  Color                  String                   @db.VarChar(15)
  Id_Profesor_Primaria   String?                  @db.VarChar(20)
  Id_Profesor_Secundaria String?                  @db.VarChar(20)
  profesor_primaria      T_Profesores_Primaria?   @relation(fields: [Id_Profesor_Primaria], references: [Id_Profesor_Primaria])
  profesor_secundaria    T_Profesores_Secundaria? @relation(fields: [Id_Profesor_Secundaria], references: [Id_Profesor_Secundaria])
